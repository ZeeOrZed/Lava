import java.util.Scanner;

public class ITPWeek2Exercises {

  
    public static void main(String[] args) {
     
        Scanner input = new Scanner(System.in);
        
        System.out.println("Enter your x-coordinate: ");
        int x = input.nextInt();
        System.out.println("Enter your y coordinate: ");
        int y = input.nextInt();
        
        double euclidean_distance = Math.sqrt(Math.pow(x, 2) + Math.pow(y, 2));
        System.out.println("The Euclidian Distance between your point and the origin is: " + euclidean_distance);
    }
    
}
