package pkg1.over.x.sum.generator;

// https://practiceit.cs.washington.edu/problem/view/bjp5/chapter4/e1-fractionSum

import java.util.*;

public class OverXSumGenerator {
    public static void main(String[] args) {
        
        Scanner input = new Scanner(System.in);
        
        System.out.println("We will produce the sum of the sequence 1/n, where n starts from 1 and ends with the integer you enter.");
        System.out.print("Enter your integer: ");
        double bound = input.nextInt();
        double sum = 0;
        
        for (double count = 1; count <= bound; count++) 
        {
            sum += (1/count);
        }

        System.out.println("The sum of the sequence is: " + sum);
    }
}
